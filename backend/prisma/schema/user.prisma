/// 用户模型
model User {
    id                  String       @id() @default(cuid())
    createdAt           DateTime     @default(now())
    updatedAt           DateTime     @updatedAt()
    /// 用户名
    username            String       @unique()
    /// 密码
    password            String
    /// 禁止
    disabled            Boolean      @default(false)
    /// 角色
    roles               Role[]
    /// 创建人
    createdById         String?
    createdBy           User?        @relation("UserCreator", fields: [createdById], references: [id])
    /// 用户组
    createdUsers        User[]       @relation("UserCreator")
    /// 所属部门列表（隐式多对多）
    departments         Department[] @relation("DeptMembers")
    /// 负责的部门列表（隐式多对多）
    leadingDepartments  Department[] @relation("DeptLeaders")
    /// 创建的部门列表
    createdDepartments  Department[] @relation("DeptCreator")

    @@map("system_users")
}
